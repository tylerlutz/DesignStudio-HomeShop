@model HomeShop.Models.Product

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product Detail</h2>
    <!-- Custom CSS -->
    <link href="~/Content/ProductDetail.css" rel="stylesheet">


    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">HomeShop</p>
                <div class="list-group">
                    @Html.ActionLink("Kitchen","Kitchen", "Product", new { @class = "list-group-item" })
                    @Html.ActionLink("Bedroom", "Bedroom", "Product", new { @class = "list-group-item" })
                    @Html.ActionLink("Bathroom", "Bathroom", "Product", new { @class = "list-group-item" })
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="img-responsive" src="@Model.ImageLocation" alt="">
                    <div class="caption-full">
                        <h4 class="pull-right">@Model.Price</h4>
                        <br />
                        <p>@Model.ProductDesc</p> 
                    </div>
                    <div class="ratings">
                        @Html.ActionLink("Add to Cart","AddItem","Cart",new { productID = Model.ProductID, quantity = 1}, new { @class = "btn btn-success"})
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container -->
        <div class="container">
            <hr>
            <!-- Footer -->
            <footer>
                <div class="row">
                    <div class="col-lg-12">
                        <p>Copyright &copy; HomeStore 2016</p>
                    </div>
                </div>
            </footer>
        </div>
        <!-- /.container -->
        <!-- jQuery -->
        <script src="~/Scripts/jquery-1.10.2.js"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
